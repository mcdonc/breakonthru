<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Door app">
    <meta name="author" content="Athenians">
    <link rel="shortcut icon" href="${request.static_url('breakonthru:static/pyramid-16x16.png')}">

    <title>Door</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('breakonthru:static/theme.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js" integrity="sha384-0s5Pv64cNZJieYFkXYOTId2HMA2Lfb6q2nAcx2n0RTLUnCAoTTsS0nKEO27XyKcY" crossorigin="anonymous"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js" integrity="sha384-ZoaMbDF+4LeFxg6WdScQ9nnR1QC2MIRxA1O9KWEXQwns1G8UNyIEZIQidzb0T1fo" crossorigin="anonymous"></script>
    <![endif]-->

    <script>
      websocket_url = "${websocket_url}";
    </script>

    <style>
      textarea {
        font-family: monospace;
        font-size: 8px;
        min-height: 100px;
        min-width: 320px;
      }
      #buzzer0 #buzzer1 #talk {
        margin-top: 10px;
        margin-bottom: 10px;
      }
      #logout {
        margin-top: 10px;
      }
    </style>

  </head>

  <body>

    <div class="starter-template">
      <div class="container">
        <div class="row">
          <div class="col-md-2">
            <img class="logo img-responsive" src="${request.static_url('breakonthru:static/door.png')}" width="217" height="167" alt="Door App">
          </div>
          <div class="col-md-10">
            <div class="container">
              <div class="content">
                <div class="row">
                  <button id="buzzer0" class="btn btn-secondary buzzer" onclick="window.buzzDoor(0)">
                Buzz Front Door
                  </button>
                </div>

                <div class="row">
                  <button id="buzzer1" class="btn btn-default buzzer" onclick="window.buzzDoor(1)">
                Buzz Inside Door
                  </button>
                </div>
                
                <div class="row">
                  <button id="talk" class="btn btn-primary" onclick="window.location.href='${doorsip}'">
          Talk to Front Door
                  </button>
                </div>

	        <div>              
                  <textarea class="" id="log" readonly="true"></textarea>
                </div>
                <div class="row">
                  <button id="logout" class="btn btn-danger" onclick="window.logout()">
          Log Out
                  </button>
                </div>

                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
    <script src="${request.static_url('breakonthru:static/index.js')}"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script>
      createWebSocket();
    </script>
  </body>
</html>






